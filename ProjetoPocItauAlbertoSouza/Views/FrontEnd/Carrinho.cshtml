<div ng-controller="carroLojaCtrl" class="modal fade modal-carrinho">
    <div class="row modal-dialog">
        <div class="col-xs-8 modal-content" style="padding-top:15px;min-width:700px">
            <form class="panel panel-info" role="form" id="form-carrinho">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Carrinho </h5>
                            </div>
                            <div class="col-xs-6">
                                <button type="button" class="btn btn-primary btn-sm btn-block" data-toggle="modal" data-target=".modal-carrinho">
                                    <span class="glyphicon glyphicon-share-alt"></span> Continue comprando
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div ng-repeat="item in Carrinho track by $index">
                        <div class="row">
                            <div class="col-xs-2">
                                <img class="img-responsive" ng-src="{{ item.Url }}">
                            </div>
                            <div class="col-xs-4">
                                <h4 class="product-name"><strong>{{ item.Nome }}</strong></h4>
                                <h4 style="white-space: nowrap;  overflow: hidden; text-overflow: ellipsis;"><small> {{ item.Descricao }}</small></h4>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-6 text-right">
                                    <h6><strong>{{ item.Valor | currency : "R$" : 0 }} <span class="text-muted">x</span></strong></h6>
                                </div>
                                <div class="col-xs-4">
                                    <control add-product="add-product" ng-model="item.Quantidade" ng-change="CarrinhoModificado == false" info-max-value="{{ item.Disponiveis }}"></control>
                                </div>
                                <div class="col-xs-2">
                                    <button type="button" class="btn btn-link btn-xs" ng-click="Remover(item)">
                                        <span class="glyphicon glyphicon-trash"> </span>
                                    </button>
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="text-center">
                            <div class="col-xs-9">
                                <h6 class="text-right">Adicionar mais itens?</h6>
                            </div>
                            <div class="col-xs-3">
                                <button type="button" class="btn btn-default btn-sm btn-block" ng-click="AtualizarCarrinho()">
                                    Atualizar pedido
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            <h4 class="text-right">Total <strong> {{ ValorTotal() }}</strong></h4>
                        </div>
                        <div class="col-xs-3">
                            <button type="submit" class="btn btn-success btn-block" ng-click="ConcluirPedido()">
                                Finalizar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
