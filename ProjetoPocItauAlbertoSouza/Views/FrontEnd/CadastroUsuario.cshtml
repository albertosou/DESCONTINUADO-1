<div ng-controller="carroLojaCtrl" class="modal fade" id="registro-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="registromodal-container">
            <h1>Cadastro</h1><br>
            <form class="form" role="form" accept-charset="UTF-8" id="login-nav" ng-submit="Cadastrar()">
                <div class="form-group">
                    <input type="text" class="form-control" id="txtNomeCadastro" placeholder="Nome Usuário" required ng-model="nome">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="txtEmailCadastro" placeholder="Endereço de e-mail" required ng-model="email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="txtSenhaCadastro" placeholder="Senha" required ng-model="senha">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="txtSenhaConfirmaCadastro" placeholder="Confirmar Senha" required ng-model="senhaConfirma">
                </div>
                <div class="form-group">
                    <input type="submit" name="registro" class="registro registromodal-submit" value="Registro">
                </div>
            </form>
        </div>
    </div>
</div>